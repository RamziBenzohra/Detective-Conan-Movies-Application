<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/alert_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detective Conan Movies"
                android:textSize="@dimen/about_layout_title"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/about_layout_text_margintop3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about1"
                android:textColor="@android:color/white"
                android:padding="@dimen/about_layout_text_panding"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/about_layout_text_margintop1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about2"
                android:textColor="@android:color/white"
                android:padding="@dimen/about_layout_text_panding"
                android:layout_gravity="center"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For contact"
                android:textColor="@android:color/white"
                android:padding="@dimen/about_layout_text_panding"
                android:layout_gravity="left"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: Ramzi.benzohra@gmail.com"
                android:autoLink="all"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/about_layout_text_margintop2"/>
            <Button
                android:id="@+id/rateus_button"
                android:layout_width="@dimen/about_layout_btn_width"
                android:layout_height="@dimen/about_layout_btn_height"
                android:background="@drawable/alert_button"
                android:text="Rate Us"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/about_layout_text_margintop1"

                android:textAllCaps="false"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version : 1.0"
                android:autoLink="all"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/about_layout_text_margintop1"
                android:layout_marginBottom="@dimen/about_layout_text_marginbutton"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>